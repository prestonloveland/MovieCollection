@{
    ViewBag.Title = "Movie List";
}
@model IEnumerable<MovieCollection.Models.MovieEntry>

<div>
    <h2>Joel Hilton List of Movies:</h2>
    <!--Create table head-->
    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th></tr>
        </thead>
        <!--Loop to print out tables, ensuring Independnce Day is never printed-->
        <tbody>
            @foreach (MovieCollection.Models.MovieEntry x in Model)
            {
                @if (x.Title == "Independence Day")
                {
                }
                else
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.Lent_To</td>
                        <td>@x.Notes</td>
                    </tr>
                }

            }
        </tbody>
    </table>
</div>